{
    "compilerOptions": {
        "target": "ES2015",
        "allowJs": false,
        "sourceMap": true,
        "removeComments": false,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "baseUrl": "./",
        "outDir": "./out",
        "declaration": true
    },
    "exclude": [
        "node_modules",
        "**/dist/**",
        "**/lib/**",
        "**/out/**",
        "**/tests/**",
        "**/scripts/**",
        "**/types/**",
        "rollup.config.js"
    ],
    "ts-node": {
        "files": true,
        "compilerOptions": {
            "esModuleInterop": true
        }
    }
}